<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    android:background="@drawable/ll"
    tools:context="com.example.jatinderkumar.googleapp12_googlebooks.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/enter_the_book_name"
        android:textSize="16sp"
        android:background="#BDBDBD"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:background="@color/colorAccent"
        android:layout_height="1sp"/>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:background="@drawable/draw"
        android:padding="5sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="wrap_content"
        android:ems="12"
        android:id="@+id/searchBook"
        android:inputType="textNoSuggestions"
        android:hint="@string/enter_to_find"
        android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:src="@drawable/ic_search_black_24dp" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:background="@color/colorAccent"
        android:layout_height="1sp"/>
    <View
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="2sp"
        android:background="@color/colorPrimaryDark"
        android:layout_height="1sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:text="Book Found"
        android:background="#BDBDBD"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:background="#234"
        android:layout_height="1sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="match_parent"
            android:id="@+id/progress"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:id="@+id/list"
            android:background="@drawable/layout_draw"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginTop="60sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:id="@+id/noBooks"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
